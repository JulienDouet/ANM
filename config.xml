<?xml version='1.0' encoding='utf-8'?>
<widget id="com.anm.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook type="before_prepare" src="scripts/prebuild.js" />

    <name>Assistance Navigation Maritime</name>
    <description>
        Une application simple servant d'Assistant de Navigation Maritime
    </description>
    <author email="alexandre.boudet@etud.univ-angers.fr" href="https://www.univ-angers.fr/fr/index.html">
        Les matelots engag√©s.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="electron">
        <preference name="ElectronSettingsFilePath" value="res/electron/settings.json"/>
        <icon src="res/electron/logo.png" />
    </platform>
</widget>
